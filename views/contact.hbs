<h2>Contact me</h2>
{{#if isSent}}
  <div class='isSent'>
    The message has been sent! ! File
    {{imgName}}
    has been saved
  </div>
{{/if}}

{{#if isError}}
  <div class='isError'>
    You can't leave fields empty
  </div>
{{/if}}

<form
  action='/contact/send-message'
  method='POST'
  enctype='multipart/form-data'
>
  <label>
    Your name:
    <input type='text' name='author' />
  </label>
  <label>
    Your email:
    <input type='email' name='sender' />
  </label>
  <label>
    Title:
    <input type='text' name='title' />
  </label>
  <label>
    Project design:
    <input type='file' name='img' accept='.gif,.jpg,.jpeg,.png' />
  </label>
  <label>
    Message:
    <textarea name='message'></textarea>
  </label>
  <button type='submit'>Send message</button>
</form>